<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/rectangle"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实时数据服务器地址"
            android:layout_marginVertical="5dp"/>

        <EditText
            android:id="@+id/real_data_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/content_editor_border"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史数据服务器地址"
            android:layout_marginVertical="5dp"/>

        <EditText
            android:id="@+id/history_data_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/content_editor_border"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/rectangle"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:layout_marginVertical="5dp"/>

        <EditText
            android:id="@+id/change_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/content_editor_border"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textSize="30sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录密码"
            android:layout_marginVertical="5dp"/>

        <EditText
            android:id="@+id/change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/content_editor_border"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textSize="30sp" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_save_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/btn_primary"
        android:text="保存"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_danger"
        android:text="退出"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />
</LinearLayout>